<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hallo, Illia"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="32sp"
            android:textColor="#2E7D32"
            android:paddingBottom="6dp" />

        <LinearLayout
            android:id="@+id/factContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fact_container"
            android:padding="20dp"
            android:layout_margin="16dp"
            android:elevation="4dp"
            android:clipToPadding="false">



            <TextView
                android:id="@+id/tvFactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fact of the Day"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#607D8B"
                android:letterSpacing="0.05"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvFact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pflanzen produzieren Sauerstoff – auch nachts manche!"
                android:textSize="16sp"
                android:textColor="#37474F"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/btnNextFact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nächster Fakt"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_gravity="end"
                android:paddingHorizontal="16dp"/>
        </LinearLayout>


        <!-- Pflanzenliste -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlants"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keine Pflanzen vorhanden"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- FloatingActionButton zum Hinzufügen -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        android:contentDescription="Neue Pflanze"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
